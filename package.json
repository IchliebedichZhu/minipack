{
  "name": "minipack",
  "version": "0.0.1",
  "description": "a bundler for wechat miniprogram",
  "main": "./dist/bundle.js",
  "bin": {
    "minipack": "./dist/bundle_command.js"
  },
  "scripts": {
    "test:method": "node ./test/index.js",
    "test:command": "minipack",
    "build": "yarn build:method & yarn build:commander",
    "build:method": "cross-env NODE_ENV=production:method rollup --config ./rollup.config.js & ",
    "build:commander": "cross-env NODE_ENV=production:commander rollup --config ./rollup.config.js"
  },
  "keywords": [
    "wechat",
    "miniprogram"
  ],
  "author": "Jerrmy Y",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/IchliebedichZhu/minipack.git"
  },
  "dependencies": {
    "@types/commander": "^2.12.2",
    "@types/node": "^14.14.14",
    "commander": "^6.2.1",
    "rollup": "^2.50.4",
    "rollup-plugin-commonjs": "^10.1.0",
    "rollup-plugin-node-resolve": "^5.2.0",
    "rollup-plugin-replace": "^2.2.0",
    "rollup-plugin-typescript": "^1.0.1",
    "ts-node": "^9.1.1",
    "tslib": "^2.0.3",
    "typescript": "^4.1.3"
  },
  "devDependencies": {
    "@types/node": "^14.14.14",
    "cross-env": "^7.0.3"
  }
}
